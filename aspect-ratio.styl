// Original version
aspect-ratio(w, h, pos = relative)
    position relative

    &:before
        display block
        content ""
        width 100%
        padding-top (h/w) * 100%

    .g-aspect-inner
        position absolute
        left 0
        top 0
        width 100%
        height 100%

// Updated version
aspect-ratio--upd(w, h = w)
    pt = (round((h / w) * 100, 2))%
    padding-top pt

    .g-aspect-inner
        margin-top (- pt)